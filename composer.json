{
	"name": "wpcy/{{plugin-slug}}",
	"description": "Brief description of the plugin.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "WPCY.COM",
			"homepage": "https://wpcy.com"
		}
	],
	"require": {
		"php": ">=8.0"
	},
	"require-dev": {
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"phpstan/phpstan": "^2.0",
		"phpunit/phpunit": "^10.0 || ^11.0",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"yoast/phpunit-polyfills": "^3.0"
	},
	"autoload": {
		"psr-4": {
			"{{Plugin_Namespace}}\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"{{Plugin_Namespace}}\\Tests\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"sort-packages": true
	},
	"scripts": {
		"lint": "parallel-lint . --exclude vendor --exclude node_modules --exclude .git",
		"phpcs": "phpcs --standard=phpcs.xml .",
		"phpcbf": "phpcbf --standard=phpcs.xml .",
		"phpstan": "phpstan analyse --configuration=phpstan.neon",
		"test": "phpunit --configuration=phpunit.xml.dist",
		"check": [
			"@lint",
			"@phpcs",
			"@phpstan"
		]
	},
	"scripts-descriptions": {
		"lint": "Check PHP syntax with Parallel Lint.",
		"phpcs": "Check coding standards with PHPCS.",
		"phpcbf": "Auto-fix coding standards with PHPCBF.",
		"phpstan": "Run static analysis with PHPStan.",
		"test": "Run PHPUnit tests.",
		"check": "Run all quality checks (lint + phpcs + phpstan)."
	}
}
