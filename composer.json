{
	"name": "wpcy/{{plugin-slug}}",
	"description": "Brief description of the plugin.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "WPCY.COM",
			"homepage": "https://wpcy.com"
		}
	],
	"require": {
		"php": ">=8.0"
	},
	"require-dev": {
		"phpstan/phpstan": "^2.0",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"yoast/phpunit-polyfills": "^3.0"
	},
	"autoload": {
		"psr-4": {
			"{{Plugin_Namespace}}\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"{{Plugin_Namespace}}\\Tests\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {},
		"sort-packages": true
	},
	"scripts": {
		"phpstan": "phpstan analyse --configuration=phpstan.neon",
		"test": "phpunit"
	}
}
